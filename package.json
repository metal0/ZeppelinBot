{
  "name": "@zeppelin/zeppelin",
  "version": "0.0.1",
  "description": "",
  "private": true,
  "scripts": {
    "format": "prettier --write \"./{backend,dashboard}/{,!(node_modules)/**/}/*.ts\"",
    "lint": "tslint \"./{backend,dashboard}/{,!(node_modules)/**/}/*.ts\"",
    "codestyle-check": "prettier --check \"./{backend,dashboard}/{,!(node_modules)/**/}/*.ts\"",
    "modules": "cd backend && npm i --production=false && cd ../dashboard && npm i --production=false",
    "update": "git reset --hard && git pull && cd backend && npm ci && npm run build && pm2 restart all && cd .."
  },
  "dependencies": {},
  "devDependencies": {
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.19.1",
    "tslint": "^5.13.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint",
      "prettier --write",
      "git add"
    ]
  }
}
